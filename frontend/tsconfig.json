{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ESNext",
        "module": "ES6",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ] 
        }
    },
    "include": ["./src/**/*"],
}
